<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape"
    android:orientation="vertical"
    android:padding="4dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_property"
                android:background="@drawable/shape_image"
                android:layout_width="match_parent"
                android:layout_height="152dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/ic_splash" />

            <TextView
                android:id="@+id/tv_nama_property"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="2dp"
                android:backgroundTint="#00A52E2E"
                android:ellipsize="end"
                android:fontFamily="@font/fjalla_one"
                android:maxLines="1"
                android:textAlignment="center"
                android:textColor="#202E57"
                android:textSize="18sp"
                tools:text="Ngawi Residence" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/tv_lokasi_property"
                    android:layout_width="103dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:drawableLeft="@drawable/ic_place"
                    android:fontFamily="@font/abel"
                    android:textColor="#050505"
                    android:textSize="14sp"
                    tools:text="Ngawi" />

                <TextView
                    android:id="@+id/tv_stock_property"
                    android:layout_width="42dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:drawableLeft="@drawable/ic_stock"
                    android:fontFamily="@font/abel"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    tools:text="4" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_biasa"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="1dp"
                    android:fontFamily="@font/abel"
                    android:text="Rp."
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_harga_property"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="4dp"
                    android:fontFamily="@font/abel"
                    android:textColor="#991111"
                    android:textSize="14sp"
                    tools:text="160000000" />


            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>